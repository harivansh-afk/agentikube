apiVersion: karpenter.k8s.aws/v1
kind: EC2NodeClass
metadata:
  name: sandbox-nodes
spec:
  amiSelectorTerms:
    - alias: "al2023@latest"
  subnetSelectorTerms:
    - tags:
        karpenter.sh/discovery: "{{ .Namespace }}-cluster"
  securityGroupSelectorTerms:
    - tags:
        karpenter.sh/discovery: "{{ .Namespace }}-cluster"
  role: "KarpenterNodeRole-{{ .Namespace }}-cluster"
